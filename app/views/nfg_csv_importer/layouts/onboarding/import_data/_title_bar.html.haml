- show_exit_button = true if local_assigns[:show_exit_button].nil?
- caption = t('nfg_csv_importer.onboarding.import_data.title_bar.caption') if local_assigns[:caption].nil?

.p-2.bg-dark
  .row.align-items-center.justify-content-between
    .col.pl-3
      = ui.nfg :typeface, :muted, caption: caption, class: 'mb-0', describe: 'onboarder-caption'
      = ui.nfg :typeface, title: file_origination_type&.name, class: 'text-white', render_if: file_origination_type.present?

    - if show_exit_button
      .col-auto.py-1

        - if first_step
          = ui.nfg :button, :link, href: nfg_csv_importer.imports_path, body: t('nfg_csv_importer.onboarding.import_data.title_bar.buttons.exit'), class: 'text-light'

        - else
          = ui.nfg :button, :link, href: nfg_csv_importer.reset_onboarder_session_imports_path, id: 'save_and_exit', body: t('nfg_csv_importer.onboarding.import_data.title_bar.buttons.exit'), class: 'text-light'
