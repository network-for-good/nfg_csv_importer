.importer-gem{ data: { view_wrapper: 'importer-gem' } }

  -# Legacy
  .container-fluid.container-flush
    .jumbotron.jumbotron-fluid.jumbotron-clouds-gray.bg-info.p-t-base-half
      .container-fluid
        .row
          .col-xs-12.p-x-2
            %h1.text-xs-center= t('.jumbotron.headline').html_safe

            %p.text-xs-center.m-b-base= t('.jumbotron.sub_headline')

            = ui.nfg :button, :secondary, :lg, body: t('.buttons.begin'), href: nfg_csv_importer.onboarding_import_data_path, describe: 'import-data-onboarder-cta'

  .container-fluid
    = render(partial: 'shared/flash_messages') rescue nil

    - if @imports.empty?
      .container-fluid.container-flush.bg-white{ data: { set_full_page: "true", describe: 'imports-empty-state' } }

    - else
      #imports_listing.row
        .col-xs-12
          .container-division
            -# Removing heading for now and need to replace in the page header
            -# %h2= t(".headings.past_imports")
            .row
              .col-xs-12.slats
                .slat-header.hidden-sm-down
                  .row.display-flex.flex-align-items-center
                    - imports_listing_row_column_structure_class = "col-md-2 m-b-half-down-sm"
                    %div{ class: imports_listing_row_column_structure_class }
                      %h4.display-4= t(".headings.imported_by_name")
                    %div{ class: imports_listing_row_column_structure_class }
                      %h4.display-4= t(".headings.data")
                    %div{ class: imports_listing_row_column_structure_class }
                      %h4.display-4= t(".headings.contacts")
                    %div{ class: imports_listing_row_column_structure_class }
                      %h4.display-4= t(".headings.donations")
                    %div{ class: imports_listing_row_column_structure_class }
                      %h4.display-4= t(".headings.errors")
                    %div{ class: imports_listing_row_column_structure_class }

                .slat-list
                  - @imports.each do |import|
                    - import_presenter = NfgCsvImporter::ImportPresenter.new(import, self)

                    = render partial: 'nfg_csv_importer/imports/import', locals: { import: import, imports_listing_row_column_structure_class: imports_listing_row_column_structure_class, import_presenter: import_presenter }

                .row.m-t-base
                  .col-xs-12
                    - if defined?(WillPaginate)
                      = will_paginate @imports
                    - elsif defined?(Kaminari)
                      = paginate @imports
