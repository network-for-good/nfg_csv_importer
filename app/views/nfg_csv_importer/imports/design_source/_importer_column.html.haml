- version = :unmapped if local_assigns[:version].nil?

- card_classes = "card"

- case version
- when :unmapped
  - card_data = { mapped: "false" }
- when :active
  - card_classes += " card-active"
- when :mapped
  - card_classes += " card-mapped"
- when :ignored
  - card_classes += " card-disabled"
- when :auto_mapped
  - card_classes += " card-mapped"

.col-importer
  %div{ class: card_classes, data: card_data }
    = render 'nfg_csv_importer/imports/design_source/importer_column_header', version: version
    .card-block.card-block-importer-index
      A
