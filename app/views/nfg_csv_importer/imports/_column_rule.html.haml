- alert_class = nil if local_assigns[:alert_class].nil?
- icon = "exclamation" if local_assigns[:icon].nil?
- circle_color = nil if local_assigns[:circle_color].nil?

- if alert_class
  - wrapping_component = "alert #{alert_class}"
- else
  - wrapping_component = "card card-block card-translucent small"



.col-md-6
  %div{ class: wrapping_component }
    .media
      .media-left
        %span{ class: "fa-stack #{ alert_class ? 'fa-lg' : 'small' }" }
          %i{ class: "fa fa-circle fa-stack-2x #{ circle_color }" }
          %i{ class: "fa fa-stack-1x fa-#{ icon } fa-inverse" }
      .media-body
        = content_tag( alert_class ? :h3 : :span, column_rule.message.html_safe )
        / %h3.media-heading
        / = column_rule.message.html_safe


/ - else
/   .col-md-6
/     .card.card-block.card-translucent
/       .media
/         .media-left
/           = fa_icon "info-circle", class: "text-blue"
/         .media-body
/           = column_rule.message.html_safe
