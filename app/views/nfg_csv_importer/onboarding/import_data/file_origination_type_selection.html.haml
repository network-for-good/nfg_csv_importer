= render layout: 'nfg_csv_importer/onboarding/sub_layout', locals: { header_message: t('.header.message'), header_page: t('.header.page', default: ''), header_form: t('.header.form'), guidance: t('.guidance.modal', default: ''), framed: false, hide_navigation_bar: false } do |f|
  .container.py-4
    .row
      .col.col-lg-10.mx-auto
        %h2.text-center.mb-3 Where is the data you are importing coming from?
        .row
          - file_origination_types.each do |file_origination_type|
            = render partial: 'nfg_csv_importer/onboarding/import_data/file_origination_type_selection/file_origination_type_radio_button', locals: { f: f, file_origination_type: file_origination_type }

          -# Hard coded "send to nfg" option
          .col-md-4.col-6.mt-3{ data: { describe: "upload_to_nfg_file_origination_type" } }
            .custom-control.custom-radio.custom-control-block.d-flex.align-items-start.h-100
              = f.radio_button 'file_origination_type', 'name', class: "custom-control-input"
              %label.custom-control-label.text-center.w-100.h-100.bg-white{ for: "name" }
                = image_tag 'http://placehold.it/280x200', height: '120'
                = ui.nfg :typeface, body: 'Send to NFG', class: 'mt-3 mb-0 text-break'
