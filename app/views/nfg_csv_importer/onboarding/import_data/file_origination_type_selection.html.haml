- locales_scope = { scope: [*locale_namespace, :file_origination_type_selection] }

= render layout: 'nfg_csv_importer/onboarding/sub_layout', locals: { framed: false, hide_navigation_bar: false } do |f|
  .container.py-4
    .row
      .col.col-lg-10.mx-auto
        %h2.text-center= t('header.message', **locales_scope)
        .row
          - file_origination_types.each do |file_origination_type|
            = render partial: 'nfg_csv_importer/onboarding/import_data/file_origination_type_selection/file_origination_type_radio_button', locals: { f: f, file_origination_type: file_origination_type, onboarder_presenter: onboarder_presenter }

= provide :after_opening_body, onboarder_presenter.render_google_tag_manager
